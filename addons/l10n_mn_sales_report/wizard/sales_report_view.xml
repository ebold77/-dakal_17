<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Detail Report Form View   -->
    <record id="view_sale_report_form" model="ir.ui.view">
        <field name="name">sales.report.view</field>
        <field name="model">report.sales</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="group"/>
                        <field name="stage_one" attrs="{'required': [('group' , '=', True)], 'invisible': [('group', '!=', True)]}"/>
                        <field name="stage_two" attrs="{'invisible': ['|', ('stage_one', '=', False), ('group', '=', False)]}"/>
                        <field name="stage_three" attrs="{'invisible': ['|', ('stage_two', '=', False), ('group', '=', False)]}"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" domain=""/>
                    </group>
                    <group>
                        <field name="invis_location" invisible="1"/>
                        <field name="invis_profit" invisible="1"/>
                        <field name="date_to"/>
                        <field name="report_type"/>
                        <field name="see_profit" attrs="{'invisible':[('invis_profit','=', True )]}" groups="l10n_mn_stock.group_stock_view_cost"/>
                        <field name="see_serial" attrs="{'invisible':[('invis_profit','=', True )]}" groups="l10n_mn_stock.group_stock_view_cost"/>
                    </group>
                </group>
                <notebook>
                   <page string="Warehouses">
                       <field name="warehouse_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Location" attrs="{'invisible':[('invis_location','=', True )]}">
                       <field name="location_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Categories">
                       <field name="category_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Brands">
                       <field name="brand_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Products">
                       <field name="product_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Production" attrs="{'invisible':[('see_serial', '=', False)]}">
                       <field name="lot_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Partner">
                       <field name="partner_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Suppliers">
                       <field name="supplier_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Sales Member">
                       <field name="salesperson_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Sales Teams">
                       <field name="salesteam_ids" options="{'no_create': True}"/>
                   </page>
                </notebook>
                <footer>
                    <button name="export_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Sale Order Detail Report Action   -->
    <record id="action_sales_report" model="ir.actions.act_window">
        <field name="name">Sales Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.sales</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sale_report_form"/>
        <field name="target">new</field>
    </record>

    <!-- Sale Order Detail Report Menu  -->
    <menuitem name="Sales Report" action="action_sales_report" id="menu_sales_report" parent="sale.menu_sale_report"/>
</odoo>
