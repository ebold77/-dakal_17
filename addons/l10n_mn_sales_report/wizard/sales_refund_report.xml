<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Борлуулалтын буцаалтын тайлангийн форм харагдац -->
    <record id="view_sales_refund_report_form" model="ir.ui.view">
        <field name="name">sales.refund.report.view</field>
        <field name="model">sales.refund.report</field>
        <field name="arch" type="xml">
	        <form string="Report Options">
	           <group>
	          		<group>
	                    <field name="date_start"/>
	                    <field name="date_end"/>
	                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" domain=""/>
	          		</group>
	          		<group>
	                    <field name="group_type"/>
	                    <field name="show_barcode"/>
	                    <field name="group_by_sale_order"/>
	          		</group>
	           </group>
               <notebook>
                   <page string="Warehouse" name="warehouses">
                       <field name="warehouse_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Category" name="categories">
                       <field name="category_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Product" name="products">
                       <field name="product_ids" options="{'no_create': True}"/>
                   </page>
                   <page string="Partner" name="partners">
                       <field name="partner_ids" options="{'no_create': True}"/>
                   </page>
               </notebook>
	            <footer>
	                <button name="export_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
	                or
	                <button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
	        </form>
        </field>
    </record>

    <!-- Борлуулалт - Тайлан - Борлуулалтын буцаалтын тайлан цэсийн action -->
    <record id="action_sales_refund_report" model="ir.actions.act_window">
        <field name="name">Sales Refund Report</field>
        <field name="res_model">sales.refund.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sales_refund_report_form"/>
        <field name="target">new</field>
    </record>

    <!-- Борлуулалт - Тайлан - Борлуулалтын буцаалтын тайлан цэс -->
    <menuitem name="Sales Refund Report" action="action_sales_refund_report" id="menu_sales_refund_report"
              parent="sale.menu_sale_report" sequence="20" groups="sales_team.group_sale_manager"/>
</odoo>
