<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<record model="ir.ui.view" id="pos_config_form_view_insurance">
            <field name="name">pos.config.view.form.for.ebarimt</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//h2[@name='order']" position="before">
                    <h2>Mongolian Health Insurance</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                            	<group>
				                    <field name="emd_url"/>
				                    <field name="emd_partner_id"/>
				                    <field name="emd_price_list_id"/>
                                    <field name="novartis_merchant_tin"/>
                            	</group>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" >
                            <div class="o_setting_right_pane">
	                            <group>
				                    <field name="user_name"/>
				                    <field name="password"/>
				                    <field name="user_id"/>
	                            </group>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
	</data>
</odoo>