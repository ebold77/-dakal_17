			<field name="name">pos.insurance.sale.tree</field>
			<field name="model">pos.insurance.sale</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="tree_string">
					<field name="name" />
					<field name="date" />
					<field name="lastName" />
					<field name="firstName" />
					<field name="register" />
					<field name="totalAmt" />
