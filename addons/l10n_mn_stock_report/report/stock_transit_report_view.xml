<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Нөхөн дүүргэлтийн тайлан -->
    <record id="stock_transit_report_view" model="ir.ui.view">
        <field name="name">Stock Transit Report</field>
        <field name="model">stock.transit.order.report</field>
        <field name="arch" type="xml">
            <form string="TRANSIT">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="is_residual"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Transit Order">
                            <field name="transit_order_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date_order"/>
                                    <field name="warehouse_id"/>
                                    <field name="supply_warehouse_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Supply Warehouse">
                            <field name="warehouse_ids" quick_create="false" create="true" delete="true" required="1"/>
                        </page>
                        <page string="Warehouse">
                            <field name="in_warehouse_ids" required="1" quick_create="false" create="true" delete="true"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <group col="2" colspan="4">
                        <button name="get_export_data" string="Export" type="object" colspan="1"/>
                        <button icon="fa-times" special="cancel" string="Close" colspan="1"/>
                    </group>
                </footer>
            </form>
        </field>
    </record>

    <!-- Нөхөн дүүргэлтийн тайлан хэвлэх action -->
    <record id="action_stock_transit_report" model="ir.actions.act_window">
        <field name="name">TRANSIT ORDER REPORT</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.transit.order.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_transit_report_view"/>
        <field name="target">new</field>
    </record>

    <!-- Нөхөн дүүргэлтийн тайлан цэс -->
    <menuitem action="action_stock_transit_report" id="menu_strock_transit_report" parent="stock.menu_warehouse_report" name="Transit order report" sequence="30"/>
</odoo>
