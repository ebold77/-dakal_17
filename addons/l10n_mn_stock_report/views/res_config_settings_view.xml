<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock config settings inherit -->
    <record id="res_config_settings_view_form_inherit_stock_report" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.report</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='product_setting_container']" position="after">
               <h2>Report</h2>
               <div class="row mt16 o_settings_container" name="report_setting_container">
                     <div class="col-12 col-lg-6 o_setting_box" id="report_attributes">
                        <group string="Product Report">
                            <group name="picking_report_conf">
                                <field name="zero_qty_zero_cost" widget="boolean"/>
                            </group>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
