<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<!-- Product report - Multi company rule -->
        <record id="rule_product_report_multi_company" model="ir.rule">
            <field name="name">Product report - multi company rule</field>
            <field name="model_id" ref="model_product_report"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Product report line - Multi company rule -->
        <record id="rule_product_report_line_multi_company" model="ir.rule">
            <field name="name">Product report line - multi company rule</field>
            <field name="model_id" ref="model_product_report_line"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <!-- My report rules -->
        <record id="product_report_personal_rule" model="ir.rule">
            <field name="name">Personal Reports</field>
            <field ref="model_product_report" name="model_id"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
        </record>

        <!-- All report rules -->
        <record id="product_report_see_all_rule" model="ir.rule">
            <field name="name">All Reports</field>
            <field ref="model_product_report" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('l10n_mn_stock.group_stock_advanced'))]"/>
        </record>
	</data>
</odoo>
