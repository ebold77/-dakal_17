<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Product Ledger Report -->
    <record id="view_product_ledger_report_form" model="ir.ui.view">
        <field name="name">Product Ledger Report</field>
        <field name="model">product.ledger.report</field>
        <field name="arch" type="xml">
            <form string="Product Ledger Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="report_id" readonly="1"/>
                    <field name="report_view_type" invisible="1"/>
                    <field name="warehouse_group" invisible="1"/>
                    <field name="show_barcode"/>
                    <field name="show_worthy_balance"/>
                    <field name="show_qty_on_reserved"/>
                    <field name="show_qty_on_hand"/>
                    <field name="show_current_cost" attrs="{'invisible': [('report_view_type', 'in', ('qty', 'qty_price'))]}"/>
                    <field name="sort"/>
                </group>
                <footer>
                    <group col="2" colspan="4">
                        <button name="export_report" string="Export" type="object" class="oe_highlight"/>
                        <button icon="fa-times" special="cancel" string="Close" />
                    </group>
                </footer>
            </form>
        </field>
    </record>

    <!-- Product Ledger Report action -->
    <record id="action_product_ledger_report" model="ir.actions.act_window">
        <field name="name">Product Ledger Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.ledger.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_product_ledger_report_form"/>
        <field name="target">new</field>
    </record>
</odoo>
