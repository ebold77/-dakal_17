<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Агуулахын бүртгэл, хяналтын баримт /Дэлгэц form/-->
	<record id="view_product_move_check_report_wizard_form" model="ir.ui.view">
		<field name="name">product.move.check.report.wizard.view</field>
		<field name="model">product.move.check.report.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Product Move Report" groups="stock.group_stock_user">
             	<sheet>
                 	<field name="level" invisible="1"/>
                     <group>
                     	<group>
                         	<field name="warehouse_id" required="1" colspan="2"/>
                         </group>
                         <group>
                             <field name="report_type" attrs="{'invisible':[('level','=','owner')]}"/>
                         </group>
                         <group>
                             <field name="prodlot_id" colspan="2"/>
                          </group>
                         <group>
                             <field name="category_id"/>
                             <field name="draft" colspan="1"/>
                         </group>
                         <group>
                             <field name="from_date" colspan="2"/>
                         </group>
                         <group>
                             <field name="to_date" colspan="2"/>
                         </group>
                     </group>
                     <notebook>
                       <page string="Products">
                         <field name="product_ids"/>
                       </page>
                     </notebook>
                 </sheet>
                 <footer>
                     <button name="export_report" string="Export" type="object" colspan="2" class="oe_highlight"/>
                     <button name="print_report" string="Print" type="object" colspan="2" class="oe_highlight"/>
                     or
                     <button special="cancel" string="Close" type="object" class="oe_link" colspan="2" />
                 </footer>
             </form>
         </field>
    </record>

    <record id="action_product_move_check_report_wizard" model="ir.actions.act_window">
    	<field name="name">Product Move Report</field>
    	<field name="res_model">product.move.check.report.wizard</field>
    	<field name="view_mode">form</field>
    	<field name="view_id" ref="view_product_move_check_report_wizard_form"/>
    	<field name="target">new</field>
	</record>

 	<menuitem action="action_product_move_check_report_wizard"
        id="menu_action_product_move_check_report_wizard"
        parent="stock.menu_warehouse_report" sequence="10" groups="stock.group_stock_user"/>
</odoo>
