<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Агуулахын тохиргоонд Барааны шаардахын ажлын урсгал сонгох талбар нэмсэн-->
        <record id="view_expense_res_config_settings" model="ir.ui.view">
            <field name="name">res.stock.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='barcode_setting_container']" position="after">
                    <h2>Product Expense</h2>
                    <div class="row mt16 o_settings_container" name="product_expense_workflow_setting">
                        <div class="col-12 col-lg-12 o_setting_box" id="product_expense_workflow_setting">
                            <group>
		                        <group>
                                    <field name="workflow_id"/>
		                            <field name="type_approve_expense" widget="radio"/>
		                        </group>
		                    </group>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>