<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Агуулах дээр барааны шаардахын ажлын урсгал тохируулах талбар нэмсэн-->
    <record id="expense_stock_warehouse_form_view" model="ir.ui.view">
        <field name="name">stock.warehouse.form</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="workflow_id"/>
            </field>
        </field>
    </record>

    <!--Агуулах дээр барааны шаардахын данс сонгох талбар нэмсэн-->
	<record id="view_stock_warehouse_inherit_product_expense_form" model="ir.ui.view">
		<field name="name">stock.warehouse.form.inherit</field>
		<field name="model">stock.warehouse</field>
		<field name="inherit_id" ref="l10n_mn_stock_account.view_stock_warehouse_inherit_mn_stock_account_form" />
		<field name="arch" type="xml">
            <xpath expr="//field[@name='payable_account_id']" position="after">
                <field name="expense_account_id" domain="[('company_id', '=', company_id), ('deprecated', '=', False)]" options="{'no_create': True, 'no_create_edit':True}"/>
			</xpath>
		</field>
	</record>
</odoo>